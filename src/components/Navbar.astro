---
const links = [
  { href: '/', label: 'Inicio' },
  { href: '/servicios', label: 'Servicios' },
  { href: '/metodologia', label: 'Metodología' },
  { href: '/sobre', label: 'Experiencia' },
  { href: '/contacto', label: 'Contacto' }
];

const currentPath = Astro.url.pathname;
---

<header class="fixed inset-x-0 top-0 z-50 border-b border-white/30 bg-white/80 shadow-sm backdrop-blur">
  <div class="mx-auto flex max-w-6xl items-center justify-between px-6 py-4 lg:px-8">
    <a href="/" class="flex items-center gap-3">
      <img src="/logoama.png" alt="Logotipo Alejandra Álvarez" class="h-10 w-auto transition duration-500 hover:scale-[1.03]" />
      <div>
        <p class="font-display text-lg font-semibold leading-none text-primary-600">Alejandra Álvarez</p>
        <p class="text-xs uppercase tracking-[0.4em] text-primary-400">Sanación pránica</p>
      </div>
    </a>
    <nav class="hidden items-center gap-8 md:flex">
      {links.map((link) => (
        <a
          class={[
            'text-xs font-semibold uppercase tracking-[0.32em] transition-colors duration-200',
            currentPath === link.href ? 'text-primary-600' : 'text-dark/65 hover:text-primary-500'
          ]}
          href={link.href}
        >
          {link.label}
        </a>
      ))}
    </nav>
    <div class="hidden items-center gap-4 md:flex">
      <a
        href="https://wa.me/51999999999"
        target="_blank"
        rel="noreferrer"
        class="inline-flex items-center gap-2 rounded-full border border-primary-200 bg-primary-500 px-6 py-2 text-xs font-semibold uppercase tracking-[0.35em] text-white shadow-glow transition hover:-translate-y-0.5 hover:bg-primary-400"
      >
        Agenda por WhatsApp
        <span aria-hidden="true">↗</span>
      </a>
    </div>
    <button
      class="inline-flex h-11 w-11 items-center justify-center rounded-full border border-primary-200 text-primary-600 transition hover:bg-primary-50 md:hidden"
      type="button"
      data-menu-toggle
      aria-label="Abrir menú de navegación"
    >
      ☰
    </button>
  </div>
  <div
    class="mobile-menu pointer-events-none absolute inset-x-4 top-full mt-3 origin-top rounded-3xl border border-primary-100 bg-white/95 opacity-0 shadow-2xl backdrop-blur transition-all duration-300 md:hidden"
    data-menu
  >
    <div class="flex flex-col gap-2 p-6">
      {links.map((link) => (
        <a
          class={[
            'rounded-2xl px-4 py-3 text-sm font-semibold uppercase tracking-[0.28em] transition',
            currentPath === link.href
              ? 'bg-primary-50 text-primary-600'
              : 'text-dark/70 hover:bg-primary-50 hover:text-primary-500'
          ]}
          href={link.href}
          data-menu-link
        >
          {link.label}
        </a>
      ))}
      <a
        href="https://wa.me/51999999999"
        target="_blank"
        rel="noreferrer"
        class="mt-4 inline-flex items-center justify-center gap-2 rounded-full bg-primary-500 px-5 py-3 text-xs font-semibold uppercase tracking-[0.35em] text-white transition hover:bg-primary-400"
      >
        Agenda por WhatsApp
        <span aria-hidden="true">↗</span>
      </a>
    </div>
  </div>
</header>

<script is:inline>
  const toggleButton = document.querySelector('[data-menu-toggle]');
  const menu = document.querySelector('[data-menu]');
  const links = document.querySelectorAll('[data-menu-link]');

  const closeMenu = () => {
    if (!menu) return;
    menu.classList.remove('pointer-events-auto');
    menu.style.opacity = '0';
    menu.style.transform = 'scaleY(0.96)';
  };

  const openMenu = () => {
    if (!menu) return;
    menu.classList.add('pointer-events-auto');
    menu.style.opacity = '1';
    menu.style.transform = 'scaleY(1)';
  };

  toggleButton?.addEventListener('click', () => {
    const isVisible = menu?.style.opacity === '1';
    if (isVisible) {
      closeMenu();
    } else {
      openMenu();
    }
  });

  links.forEach((link) =>
    link.addEventListener('click', () => {
      closeMenu();
    })
  );

  window.addEventListener('resize', () => {
    if (window.innerWidth >= 768) {
      closeMenu();
    }
  });
</script>

